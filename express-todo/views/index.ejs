<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>

    <form action="/addData" method="post" class="container mt-4">
        <div class="mb-3">
          <label for="exampleInputId1" class="form-label">ID</label>
          <input type="text" name="id" class="form-control" id="exampleInputId1" aria-describedby="idHelp">
          <div id="idHelp" class="form-text">We'll never share your ID with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputTask1" class="form-label">Task</label>
          <input type="text" name="name" class="form-control" id="exampleInputTask1">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      
    
    <table class="table table-striped container mt-5">
        <thead>
          <tr>
            <th scope="col">Index</th>
            <th scope="col">Id</th>
            <th scope="col">Task</th>
            <th scope="col">Delete</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>
    <% data.map((el,i)=>{ %>

                
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= el.id %></td>
              <td><%= el.name %></td>
              <td><a href="/delete?userid=<%= el.id %>">delete</a></td>
              <td><a href="/edit?userid=<%= el.id %>">Update</a></td>
            </tr>
        

    <% }) %>
    </tbody>
        </table>


</body>
</html>